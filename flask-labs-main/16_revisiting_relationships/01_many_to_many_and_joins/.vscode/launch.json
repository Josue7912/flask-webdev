  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flask Run",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "flask_reddit.py",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "0"
      },
      "args": [
        "run",
        "--no-debugger",
        // "--no-reload",
        "--port",
        "20000"
      ],
      "jinja": true
    },
    {
      "name": "Flask Shell",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "flask_reddit.py",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "0"
      },
      "args": ["shell"],
      "jinja": true
    },
    {
      "name": "Kickstart",
      "type": "python",
      "request": "launch",
      "program": "kickstart.py",
      "console": "integratedTerminal"
    },
  ]
}
